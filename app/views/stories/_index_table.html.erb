
<%= grid(@stories_grid) do |g|

    g.column :column_name => 'ID', :attribute_name => 'id' do |story|
      story.id
    end

    g.column :column_name => 'Pos', :attribute_name => 'position' do |story|
      story.position
    end

    g.column  :column_name => 'Name', :attribute_name => 'name' do |story|
      story.name
    end

    g.column  :column_name => 'Visible', :attribute_name => 'visible' do |story|
      story.visible? ? 'Yes' : 'No'
    end

    g.column do |story|
      link_to('Edit', edit_story_path(story))
    end
	g.action_column
  end -%>

 <%= button_to_function "Submit", submit_grid_javascript(@stories_grid) %>
 <%= button_to_function "Reset",  reset_grid_javascript(@stories_grid) %>

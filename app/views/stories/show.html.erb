<% @page_title = "Story Show"%>
<%= link_to("<<Back to list", { :action=>"list", 
								:page => session[:story_page], 
								:sort => session[:story_sort], 
								:direction => session[:story_direction],
								:search => session[:story_search] }, 
								:class => "back-link") %>

<div class = "story show">
	<h2>Show Story</h2>
	<table summary="Story detail view">
		<tr>
			<th>Name</th>
			<td><%= @story.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @story.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @story.visible ? "true" : "false" %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @story.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @story.updated_at %></td>
		</tr>
	</table>
</div>

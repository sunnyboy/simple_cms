<% @page_title = "Story Edit"%>
<%= link_to("<<Back to list", { :action=>"list", 
								:page => session[:story_page], 
								:sort => session[:story_sort], 
								:direction => session[:story_direction],
								:search => session[:story_search] }, 
								:class => "back-link") %>
<div class="story edit">
	<h2>Update Story</h2>
	<%= form_for(:story, 		:url => {
								:action => "update",
								:id => @story.id }, 
								:html => { :multipart => true } ) do |f| %>
		<%= render(:partial => "form", :locals => { :f => f } )%>
		<div class="form-buttons">
			<%= submit_tag("Update Story") %>
		</div>
	<% end %>
</div>
<% @page_title = "Section List" %>
<%= link_to("<<Back to Pages list", { :controller => "pages", :action => "list", :subject_id => @page.subject_id }, :class=>"back-link") %>
<div class="section list">
	<h2>Sections</h2>
	<%= link_to("Add new Section", {:action => "new", :page_id => @page.id }, :class=>"action new round") %>
	<table class="list" summary="Section list">
		<tr class="header">
			<th>Pos</th>
			<th>Section name</th>
			<th>Visible</th>
			<th>Actions</th>
		</tr>
		<% @sections.each do |section| %>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.name %></td>
			<td class="center"><%= status_tag(section.visible) %></td>
			<td class="actions">
				<%= link_to("Show", {:action=>"show", :id => section.id, :page_id => @page.id}, :class=>"action show round center")       %>
		    	<%= link_to("Edit", {:action=>"edit", :id => section.id, :page_id => @page.id}, :class=>"action edit round center")       %>
		    	<%= link_to("Delete", {:action=>"delete", :id => section.id, :page_id => @page.id}, :class=>"action delete round center") %>
			</td>
		</tr>
		<% end %>		
	</table>
</div>
	
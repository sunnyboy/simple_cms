<%= error_messages_for (@section) %>

<table summary="Section form fields">
	<tr>
		<th><%= f.label(:page_id, "Page ID") %></th>
		<td><%= f.select(:page_id, Page.all.collect {|s| [s.name, s.id]}) %></td>
	</tr>
	<tr>
		<th><%= f.label(:name) %></th>
		<td><%= f.text_field(:name, :size=>40, :maxlength=>40) %></td>
	</tr>
	<tr>
		<th><%= f.label(:position) %></th>
		<td><%= f.select(:position, 1..@section_count) %></td>
	</tr>
		<th><%= f.label(:visible) %></th>
		<td><%= f.check_box(:visible) %></td>
	</tr>
	<tr>
		<th><%= f.label(:content) %></th>
		<td><%= f.text_area(:content, :size=>"40x10") %></td>
	</tr>
	<tr>
		<th><%= f.label(:content_type, "Content Type") %></th>
		<td>
			<%= f.radio_button(:content_type, "text") %> Text
			<%= f.radio_button(:content_type, "HTML") %> HTML
		</td>
	</tr>
	<tr>
		<th><%= f.label(:published_from, "Published from") %></th>
		<td><%= f.datetime_select(:published_from, 
		:order=>[:day, :month, :year], :include_blank=>true, :prompt=>true, :minute_step=>15 ) %></td>
	</tr>
	<tr>
		<th><%= f.label(:published_to, "Published to") %></th>
		<td><%= f.datetime_select(:published_to, 
		:order=>[:day, :month, :year], :include_blank=>true, :prompt=>true, :minute_step=>15 ) %></td>
	</tr>
</table>
<h1>Listing documents</h1>

<table>
  <tr>
    <th>Id sender</th>
    <th>Id recipient</th>
    <th>Id project</th>
    <th>Id doctype</th>
    <th>Filename</th>
    <th>Size</th>
    <th>Docdate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.id_sender %></td>
    <td><%= document.id_recipient %></td>
    <td><%= document.id_project %></td>
    <td><%= document.id_doctype %></td>
    <td><%= document.filename %></td>
    <td><%= document.size %></td>
    <td><%= document.docdate %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


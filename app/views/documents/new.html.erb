<div id="upperblock">
	<h2 style="float: left;">New document: <%=  @document_count -%> </h2>
	<p style="float: right;">
		<%= link_to 'Back', documents_path -%>
	</p>
	
</div>

<div id="leftblock">
	
	<%= simple_form_for(:document, :url=> {:action=>"create"}) do |f| %>
	
		<%= render(:partial=>"form", :locals=>{:f=>f} )%>
		<div class="form-buttons">
			<%= submit_tag("Create Document") %>
		</div>
	<% end %>
</div>

<div id="rightblock">
	<div id="docviewer">
		<iframe 								src="http://docs.google.com/gview?url=http://dl.dropbox.com/u/1143421/MailAttachments/Ebay_Laky.pdf&embedded=true" width=640 height=500  frameborder="0">
		</iframe>
	</div>
</div>

